<UserControl x:Class="ISSLocator.NavigationArrowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="52.5" d:DesignWidth="50">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Canvas x:Name="ContentPanel" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Width="52.5" Height="52.5">
            <Canvas.Projection>
                <PlaneProjection/>
            </Canvas.Projection>
            <Canvas.RenderTransform>
                <CompositeTransform Rotation="0"/>
            </Canvas.RenderTransform>
            <Ellipse Stroke ="#FF1EEA14"  StrokeThickness="4" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Canvas.Top="2.5"/>
            <Ellipse Fill="Red" HorizontalAlignment="Left" Height="10" Opacity="0.8" VerticalAlignment="Top" Width="10" Canvas.Left="20"/>
        </Canvas>
    </Grid>
</UserControl>